<% if not @events.empty? %>
<span class="selector" id="<%=h @selector.label.downcase %>">
  <div class="selector">
    <h1><%=h @selector.name %></h1>
    <ul>
      <% for event in @events %>
        <li>
          <div class="title"><%= link_to event.title, :controller => "events", :action => "show", :id => event %></div>
          <div class="time"><%=h event.startTime.strftime( "%a %b %d %I:%M %p" ) %>
            <% if event.endTime %>
              - <%=h event.endTime.strftime( (event.endTime - event.startTime < (60 * 60 * 24) and event.endTime.day - event.startTime.day == 0)? 
                            "%I:%M %p" : 
                            "%a %b %d %I:%M %p") %>
            <% end %>
          <div class="description">
	    <% if event.description.size > 100 %>
	      <%=h event.description.slice(0,100) %>
	      <%= link_to "[More]", :controller => "events", :action => "show", :id => event %>
	    <% else %>
  	      <%=h event.description %>
	    <% end %>
	  </div>
        </li>
      <% end %>
    </ul>
  </div>
</span>
<% end %>
