<h3>Editing Posting: <%= @event.title %></h3>

<% if @flash[:notice] %>
  <div class="notice">
    <%=h @flash[:notice] %>
  </div>
<% end %>

<%= form_remote_tag :update => "event[#{@event.id}]", :url => {:action => 'update', :id => @event.id} %>
  <%= render_partial "form" %>
  <%= submit_tag 'Update' %>
  <input type="reset"/>
<%= end_form_tag %>
