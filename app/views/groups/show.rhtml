<h1>
  <%=h @group.name %>
</h1>
<p>
  <strong>Description:</strong><br/>
</p>
  <%= simple_format(@group.description) %>

<p>
  Class: <%=h @group.group_class.name %>
</p>
<div id="events">
  <% unless @upcoming_events.empty? %>
    <h3>Upcoming Events</h3>
    <%= render :partial => 'upcoming_events' %>
  <% end %>
  <% unless @past_events.empty? %>
    <h3>History</h3>
    <%= render :partial => 'history' %>
  <% end %>
</div>
<div id="page_actions">
  <%= link_to 'Export to iCal', :action => 'show', :id => @group, :format => 'ical' %>
  <%= link_to 'Back', request.env['HTTP_REFERER'] %>
</div>
  
